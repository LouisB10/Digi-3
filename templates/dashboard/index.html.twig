{% extends 'base.html.twig' %} 

{% block title %}Digi-3 - Dashboard{% endblock %} 

{% block stylesheets %}
    {{ parent() }}
    {# Les styles sont maintenant dans style.scss #}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('dashboard') }}
{% endblock %}

{% block body %} 
    {% include 'includes/header.html.twig' %}

    <div class="dashboard-container">
        <div class="parameter_menu">
            <div class="user-info card">
                <div class="user-avatar">
                    <img src="{{ asset(user.userAvatar) }}" alt="User Avatar">
                </div>
                <div class="user-details">
                    <h3>{{ user.userFirstName }}</h3>
                    <h3>{{ user.userLastName }}</h3>
                    <p>{{ user.userEmail }}</p>
                    <p>
                        {% if is_granted('ROLE_ADMIN') %}
                            Administrateur
                        {% elseif is_granted('ROLE_RESPONSABLE') %}
                            Responsable
                        {% elseif is_granted('ROLE_PROJECT_MANAGER') %}
                            Chef de projet
                        {% elseif is_granted('ROLE_LEAD_DEVELOPER') %}
                            Lead développeur
                        {% elseif is_granted('ROLE_DEVELOPER') %}
                            Développeur
                        {% else %}
                            Utilisateur
                        {% endif %}
                    </p>
                </div>
            </div>

            <div class="user-stats card">
                <div class="tasks">
                    <p>Tâches</p>
                    <h3>
                        {% if assignedTasks|length > 0 %}
                            {{ assignedTasks|length }} <span class="up-arrow">↑</span>
                        {% else %}
                            0 <span class="down-arrow">↓</span>
                        {% endif %}
                    </h3>
                </div>
                <div class="projects">
                    <p>Projets</p>
                    <h3>
                        {% if projectStats.total > 0 %}
                            {{ projectStats.total }} <span class="up-arrow">↑</span>
                        {% else %}
                            0 <span class="down-arrow">↓</span>
                        {% endif %}
                    </h3>
                </div>
            </div>

            <nav class="sidebar-nav card">
                <ul>
                    <a href="{{ path('app_dashboard') }}" class="btn-link">Page d'accueil <i class="fas fa-home"></i></a>
                    
                    {% if permissions.canViewProjects %}
                    <a href="{{ path('app_projects_list') }}" class="btn-link">Projets</a>
                    {% endif %}
                    
                    {% if permissions.canViewCustomers %}
                    <a href="{{ path('app_parameter_customers') }}" class="btn-link">Clients</a>
                    {% endif %}
                    
                    {% if permissions.canViewUsers %}
                    <a href="{{ path('app_parameter_users') }}" class="btn-link">Utilisateurs</a>
                    {% endif %}
                    
                    {% if permissions.canViewParameters %}
                    <a href="#" class="btn-link">Paramètres</a>
                    {% endif %}
                    
                    <a href="#" class="btn-link">Calendrier</a>
                </ul>
            </nav>
        </div>
        <div class="main-content">
            <div class="calendar card">
                <h4>Calendrier</h4>
                <iframe src="https://calendar.google.com/calendar/embed?src=your_calendar_id&ctz=Europe%2FParis" 
                        class="calendar-iframe"
                        frameborder="0" 
                        scrolling="no"></iframe>
            </div>

            {% if permissions.canViewProjects %}
            <div id="project-stats" class="project-info card">
                <h4>{{ projectStats.total }} Projets</h4>
                <div class="project-progress">
                    <div class="progress-bar">
                        {% set progressPercentage = projectStats.total > 0 ? (projectStats.inProgress / projectStats.total * 100)|round : 0 %}
                        <span class="progress" data-percentage="{{ progressPercentage }}"></span>
                    </div>
                    <p>{{ projectStats.inProgress }} en cours</p>
                </div>
                <p>{{ projectStats.completed }} terminés, {{ projectStats.onHold }} en attente</p>
                <a href="{{ path('app_projects_list') }}" class="more-info">En savoir plus</a>
            </div>
            
            <div class="recent-projects card">
                <h4>Projets récents</h4>
                <div class="projects-list">
                    {% if projectStats.recent|length > 0 %}
                        {% for project in projectStats.recent %}
                            <div class="project-item clickable-card" data-target="{{ path('app_management_project', {'id': project.id}) }}">
                                <div class="project-details">
                                    <h5>{{ project.projectName }}</h5>
                                    <p>Client: {{ project.projectCustomer ? project.projectCustomer.name : 'Non défini' }}</p>
                                    <p>Statut: {{ project.projectStatus.value }}</p>
                                </div>
                                <div class="project-dates">
                                    <p>Début: {{ project.projectStartDate|date('d/m/Y') }}</p>
                                    {% if project.projectTargetDate %}
                                        <p>Fin prévue: {{ project.projectTargetDate|date('d/m/Y') }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <p class="no-data">Aucun projet récent</p>
                    {% endif %}
                </div>
            </div>
            {% endif %}

            <div id="assigned-tasks" class="tasks-list card">
                <h4>Tâches assignées</h4>
                {% if assignedTasks|length > 0 %}
                    <div class="tasks-container">
                        {% for task in assignedTasks %}
                            <div class="task-item status-{{ task.taskStatus|lower }}" data-task-id="{{ task.id }}">
                                <div class="task-header">
                                    <h5>{{ task.taskName }}</h5>
                                    <span class="task-status">{{ task.taskStatus.value }}</span>
                                </div>
                                <div class="task-details">
                                    <p>Projet: {{ task.taskProject ? task.taskProject.projectName : 'Non défini' }}</p>
                                    <p>Date limite: {{ task.taskTargetDate ? task.taskTargetDate|date('d/m/Y') : 'Non définie' }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="no-data">Aucune tâche assignée</p>
                {% endif %}
            </div>

        </div>
    </div>
{% endblock %}
