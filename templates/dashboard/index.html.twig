{% extends 'base.html.twig' %}

{% block title %}Digi-3 - Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('dashboard') }}
{% endblock %}

{% block body %}
    {% include 'includes/header.html.twig' %}

    <div class="dashboard-container">
        <div class="parameter_menu">
            <div class="user-info card">
                <div class="user-avatar">
                    <img src="{{ asset(user.userAvatar) }}" alt="Avatar de {{ user.userFirstName }}">
                </div>
                <div class="user-details">
                    <h3>{{ user.userFirstName }}</h3>
                    <h3>{{ user.userLastName }}</h3>
                    <p>{{ user.userEmail }}</p>
                    <p>
                        {% if is_granted('ROLE_ADMIN') %}
                            Administrateur
                        {% elseif is_granted('ROLE_RESPONSABLE') %}
                            Responsable
                        {% elseif is_granted('ROLE_PROJECT_MANAGER') %}
                            Chef de projet
                        {% elseif is_granted('ROLE_LEAD_DEVELOPER') %}
                            Lead développeur
                        {% elseif is_granted('ROLE_DEVELOPER') %}
                            Développeur
                        {% else %}
                            Utilisateur
                        {% endif %}
                    </p>
                </div>
            </div>

            <div class="user-stats card">
                <div class="tasks">
                    <p><i class="fas fa-tasks"></i> Tâches</p>
                    <h3>
                        {% if assignedTasks|length > 0 %}
                            {{ assignedTasks|length }} <span class="up-arrow">↑</span>
                        {% else %}
                            0 <span class="down-arrow">↓</span>
                        {% endif %}
                    </h3>
                </div>
                <div class="projects">
                    <p><i class="fas fa-project-diagram"></i> Projets</p>
                    <h3>
                        {% if projectStats.total > 0 %}
                            {{ projectStats.total }} <span class="up-arrow">↑</span>
                        {% else %}
                            0 <span class="down-arrow">↓</span>
                        {% endif %}
                    </h3>
                </div>
            </div>

            <nav class="sidebar-nav card">
                <ul>
                    <a href="{{ path('app_dashboard') }}" class="btn-link"><i class="fas fa-home"></i> Page d'accueil</a>
                    {% if permissions.canViewProjects %}
                    <a href="{{ path('app_projects_list') }}" class="btn-link"><i class="fas fa-project-diagram"></i> Projets</a>
                    {% endif %}
                    {% if permissions.canViewCustomers %}
                    <a href="{{ path('app_parameter_customers_index') }}" class="btn-link"><i class="fas fa-building"></i> Clients</a>
                    {% endif %}
                    <a href="#" class="btn-link" id="calendar-toggle"><i class="fas fa-calendar-alt"></i> Calendrier</a>
                </ul>
            </nav>
        </div>

        <div class="main-content">
            <div class="calendar card">
                <h4>Calendrier</h4>
                <iframe src="https://calendar.google.com/calendar/embed?src=your_calendar_id&ctz=Europe%2FParis" 
                        frameborder="0" 
                        scrolling="no"></iframe>
            </div>

            <div class="vertical-cards">
                <div class="project-info card">
                    <h4>{{ projectStats.total }} Projets</h4>
                    <div class="project-progress">
                        <div class="progress-bar">
                            {% set progressPercentage = projectStats.total > 0 ? (projectStats.inProgress / projectStats.total * 100)|round : 0 %}
                            <span class="progress" data-percentage="{{ progressPercentage }}"></span>
                        </div>
                        <p style="color: black;">{{ projectStats.inProgress }} en cours</p>
                    </div>
                    <p style="color: black;">{{ projectStats.completed }} terminés, {{ projectStats.onHold }} en attente</p>
                    <a href="{{ path('app_projects_list') }}" class="more-info"><i class="fas fa-info-circle"></i> En savoir plus</a>
                </div>
                
                <div class="efficiency-box card">
                    <h4><i class="fas fa-cogs"></i> Efficacité des tâches</h4>
                    <p style="color: black;">Analyse de la performance des tâches en cours...</p>
                </div>
                
                <div class="productivity-box card">
                    <h4><i class="fas fa-rocket"></i> Productivité individuelle</h4>
                    <p>Vous avez {{ assignedTasks|length }} tâches assignées</p>
                    <p>Consultez vos projets pour plus de détails</p>
                </div>
            </div>

            <div id="assigned-tasks" class="tasks-list card">
                <h4 style="color: black;"><i class="fas fa-clipboard-list"></i> Tâches assignées</h4>
                {% if assignedTasks|length > 0 %}
                    <div class="tasks-container">
                        {% for task in assignedTasks %}
                            <div class="task-item status-{{ task.taskStatus|lower }}" data-task-id="{{ task.id }}">
                                <div class="task-header">
                                    <h5>{{ task.taskName }}</h5>
                                    <span class="task-status">{{ task.taskStatus.value }}</span>
                                </div>
                                <div class="task-details">
                                    <p>Projet: {{ task.taskProject ? task.taskProject.projectName : 'Non défini' }}</p>
                                    <p>Date limite: {{ task.taskTargetDate ? task.taskTargetDate|date('d/m/Y') : 'Non définie' }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p style="color: black;" class="no-data">Aucune tâche assignée</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}