<header>
    <nav class="flex">
        <div class="header-logo">
            <a href="{{ path('home_index') }}" class="flex">
                <img src="/img/header/home-logo.png" alt="Logo Digi-3">
                <p>DIGI-3 <p class="header-logo-dot">.</p></p>
            </a> 
        </div>
        <ul class="flex">
            <li class="{% if app.request.attributes.get('_route') == 'app_dashboard' %}active{% endif %}">
                <a href="{{ path('app_dashboard') }}">Dashboard</a>
            </li>
            <li class="{% if app.request.attributes.get('_route') == 'app_management_project' %}active{% endif %}">
                <a href="{{ path('app_management_project') }}">Gestion de projets</a>
            </li>
            <li class="{% if app.request.attributes.get('_route') == 'app_parameter_generaux' %}active{% endif %}">
                <a href="{{ path('app_parameter_generaux') }}">Paramètres</a>
            </li>
        </ul>
        <div class="header-search">
            <input type="text" placeholder="Rechercher" class="search-input">
            {# <img src="/img/loupe.png" alt="Recherche" class="search-icon"> #}
        </div>
        <a href="{{ path('app_parameter_generaux') }}">
            <img src="/img/header/account-icon.png" alt="Icone de compte">
        </a>
    </nav>

    {# CSS pour le style de la navigation #}
    <style>
        .flex {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .flex ul {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .flex li a {
            text-decoration: none;
            color: white; /* Met le texte en blanc */
            position: relative;
            font-weight: normal;
        }

        .flex li.active a {
            font-weight: bold; /* Met le texte en gras pour l'élément actif */
        }

        .flex li.active a::after {
            content: "";
            position: absolute;
            left: 0;
            bottom: -5px; /* Positionne le soulignement juste en dessous du texte */
            width: 100%;
            height: 4px; /* Épaisseur du soulignement */
            background: linear-gradient(90deg, #00e5ff 0%, #00bfa5 100%); /* Dégradé comme sur l'image */
            border-radius: 2px; /* Arrondis les coins du soulignement */
        }

        .header-search .search-input {
            padding: 8px 12px;
            border: 1px solid #ccc;
            border-radius: 20px;
        }

        .header-logo a {
            display: flex;
            align-items: center;
        }

        .header-logo img {
            margin-right: 10px;
        }

        .header-logo-dot {
            color: #00bfa5; /* Couleur du point */
        }
    </style>
</header>
