{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
<main id="main-content" role="main">
  <div class="auth-container">
    <div class="auth-section flex">
      {{ form_start(form, {'attr': {'class': 'reset-password-form'}}) }}
        <h2>Réinitialisation de mot de passe</h2>
        <p>Entrez votre adresse email pour recevoir un lien de réinitialisation de mot de passe.</p>
        
        <div class="form-group">
          {{ form_label(form.email) }}
          {{ form_widget(form.email) }}
          {{ form_errors(form.email) }}
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="form-actions">
          <button type="submit" class="auth-submit">Envoyer le lien</button>
          <a href="{{ path('app_auth') }}" class="btn-link">Retour à la connexion</a>
        </div>
      {{ form_end(form) }}
    </div>
  </div>
</main>
{% endblock %}