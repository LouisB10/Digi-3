{% extends 'base.html.twig' %}

{% block title %}Digi-3 - Liste des projets{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .project-card {
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            margin-bottom: 20px;
            transition: transform 0.2s;
        }
        
        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .project-header {
            padding: 15px;
            border-bottom: 1px solid #eee;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .project-body {
            padding: 15px;
        }
        
        .project-footer {
            padding: 15px;
            border-top: 1px solid #eee;
            display: flex;
            justify-content: space-between;
        }
        
        .status-badge {
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
            color: white;
        }
        
        .status-new { background-color: #3498db; }
        .status-in-progress { background-color: #2ecc71; }
        .status-on-hold { background-color: #f39c12; }
        .status-completed { background-color: #9b59b6; }
        .status-cancelled { background-color: #e74c3c; }
        
        .filter-section {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'includes/header.html.twig' %}
    
    <main class="container mt-4">
        <h1 class="mb-4">Gestion des projets</h1>
        
        <div class="filter-section">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="status" class="form-label">Statut</label>
                    <select name="status" id="status" class="form-select">
                        <option value="">Tous les statuts</option>
                        {% for status in statuses %}
                            <option value="{{ status.value }}" {% if currentStatus == status.value %}selected{% endif %}>
                                {{ status.getLabel() }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                
                <div class="col-md-4">
                    <label for="customer" class="form-label">Client</label>
                    <select name="customer" id="customer" class="form-select">
                        <option value="">Tous les clients</option>
                        {% for customer in customers %}
                            <option value="{{ customer.id }}" {% if currentCustomer == customer.id|string %}selected{% endif %}>
                                {{ customer.customerName }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Filtrer</button>
                    <a href="{{ path('app_projects_list') }}" class="btn btn-secondary">Réinitialiser</a>
                </div>
            </form>
        </div>
        
        {% if permissions.canCreateProject %}
            <div class="mb-4 text-end">
                <a href="{{ path('app_management_project') }}" class="btn btn-success">
                    <i class="fas fa-plus"></i> Nouveau projet
                </a>
            </div>
        {% endif %}
        
        {% if projects|length > 0 %}
            <div class="row">
                {% for project in projects %}
                    <div class="col-md-6 col-lg-4">
                        <div class="project-card">
                            <div class="project-header">
                                <h5 class="mb-0">{{ project.projectName }}</h5>
                                <span class="status-badge status-{{ project.projectStatus|replace({'_': '-'}) }}">
                                    {{ project.projectStatus ? project.projectStatus.getLabel() : 'Nouveau' }}
                                </span>
                            </div>
                            <div class="project-body">
                                <p class="mb-2">
                                    <strong>Client:</strong> {{ project.projectCustomer.customerName }}
                                </p>
                                <p class="mb-2">
                                    <strong>Chef de projet:</strong> {{ project.projectManager.userFirstName }} {{ project.projectManager.userLastName }}
                                </p>
                                <p class="mb-2">
                                    <strong>Date de début:</strong> 
                                    {% if project.projectStartDate %}
                                        {{ project.projectStartDate|date('d/m/Y') }}
                                    {% else %}
                                        Non définie
                                    {% endif %}
                                </p>
                                <p class="mb-0">
                                    <strong>Date cible:</strong> 
                                    {% if project.projectTargetDate %}
                                        {{ project.projectTargetDate|date('d/m/Y') }}
                                    {% else %}
                                        Non définie
                                    {% endif %}
                                </p>
                            </div>
                            <div class="project-footer">
                                <div>
                                    <span class="badge bg-info">{{ project.tasks|length }} tâches</span>
                                </div>
                                <div>
                                    <a href="{{ path('app_management_project', {'id': project.id}) }}" class="btn btn-sm btn-primary">
                                        Gérer
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                Aucun projet ne correspond à vos critères de recherche.
            </div>
        {% endif %}
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Soumettre le formulaire automatiquement lorsqu'un filtre change
            document.querySelectorAll('#status, #customer').forEach(function(select) {
                select.addEventListener('change', function() {
                    this.form.submit();
                });
            });
        });
    </script>
{% endblock %} 