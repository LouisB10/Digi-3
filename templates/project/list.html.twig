{% extends 'base.html.twig' %}

{% block title %}Digi-3 - Liste des projets{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('project_list') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('project') }}
    {{ encore_entry_script_tags('project_list') }}
{% endblock %}

{% block body %}
    {% include 'includes/header.html.twig' %}
    {% set permissions = getUserPermissions() %}
    
    <main class="container mt-4" role="main">
        <h1 class="mb-4" id="page-title">Gestion des projets</h1>
        
        <div class="filter-section" role="search" aria-labelledby="filter-heading">
            <h2 id="filter-heading" class="visually-hidden">Filtres de recherche</h2>
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="status" class="form-label">Statut</label>
                    <select name="status" id="status" class="form-select">
                        <option value="">Tous les statuts</option>
                        {% for status in statuses %}
                            <option value="{{ status.value }}" {% if currentStatus == status.value %}selected{% endif %}>
                                {{ status.getLabel() }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                
                <div class="col-md-4">
                    <label for="customer" class="form-label">Client</label>
                    <select name="customer" id="customer" class="form-select">
                        <option value="">Tous les clients</option>
                        {% for customer in customers %}
                            <option value="{{ customer.id }}" {% if currentCustomer == customer.id|string %}selected{% endif %}>
                                {{ customer.customerName }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Filtrer</button>
                    <a href="{{ path('app_projects_list') }}" class="btn btn-secondary" role="button">Réinitialiser</a>
                </div>
            </form>
        </div>
        
        {% if permissions.canCreateProject %}
            <div class="mb-4 text-end">
                <a href="{{ path('app_management_project') }}" class="btn btn-success" role="button" aria-label="Créer un nouveau projet">
                    <i class="fas fa-plus" aria-hidden="true"></i> Nouveau projet
                </a>
            </div>
        {% endif %}
        
        {% if projects|length > 0 %}
            <div class="row" role="list" aria-label="Liste des projets">
                {% for project in projects %}
                    <div class="col-md-6 col-lg-4" role="listitem">
                        <div class="project-card">
                            <div class="project-header">
                                <h5 class="mb-0" id="project-title-{{ project.id }}">{{ project.projectName }}</h5>
                                <span class="status-badge status-{{ project.projectStatus|replace({'_': '-'}) }}" aria-label="Statut: {{ project.projectStatus ? project.projectStatus.getLabel() : 'Nouveau' }}">
                                    {{ project.projectStatus ? project.projectStatus.getLabel() : 'Nouveau' }}
                                </span>
                            </div>
                            <div class="project-body">
                                <p class="mb-2">
                                    <strong id="client-label-{{ project.id }}">Client:</strong> <span aria-labelledby="client-label-{{ project.id }}">{{ project.projectCustomer.customerName }}</span>
                                </p>
                                <p class="mb-2">
                                    <strong id="manager-label-{{ project.id }}">Chef de projet:</strong> <span aria-labelledby="manager-label-{{ project.id }}">{{ project.projectManager.userFirstName }} {{ project.projectManager.userLastName }}</span>
                                </p>
                                <p class="mb-2">
                                    <strong id="start-date-label-{{ project.id }}">Date de début:</strong> 
                                    <span aria-labelledby="start-date-label-{{ project.id }}">
                                    {% if project.projectStartDate %}
                                        {{ project.projectStartDate|date('d/m/Y') }}
                                    {% else %}
                                        Non définie
                                    {% endif %}
                                    </span>
                                </p>
                                <p class="mb-0">
                                    <strong id="target-date-label-{{ project.id }}">Date cible:</strong> 
                                    <span aria-labelledby="target-date-label-{{ project.id }}">
                                    {% if project.projectTargetDate %}
                                        {{ project.projectTargetDate|date('d/m/Y') }}
                                    {% else %}
                                        Non définie
                                    {% endif %}
                                    </span>
                                </p>
                            </div>
                            <div class="project-footer">
                                <div>
                                    <span class="badge bg-info" aria-label="{{ project.tasks|length }} tâches associées">{{ project.tasks|length }} tâches</span>
                                </div>
                                <div>
                                    <a href="{{ path('app_management_project', {'id': project.id}) }}" class="btn btn-sm btn-primary" role="button" aria-label="Gérer le projet {{ project.projectName }}">
                                        Gérer
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info" role="alert">
                Aucun projet ne correspond à vos critères de recherche.
            </div>
        {% endif %}
    </main>
{% endblock %} 