{% extends 'base.html.twig' %}

{% block title %}Digi 3 - Détails de la tâche{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('styles') }}
{% endblock %}

{% block body %}
    {% include 'includes/header.html.twig' %}
    
    <main role="main">
        <div class="task-card" aria-labelledby="task-title">
            <h1 id="task-title">{{ task.taskName }}</h1>
            <div class="task-info">
                <p><strong id="desc-label">Description :</strong> <span aria-labelledby="desc-label">{{ task.taskDescription }}</span></p>
                <p><strong id="type-label">Type :</strong> <span aria-labelledby="type-label">{{ task.taskType }}</span></p>
                <p><strong id="status-label">Statut :</strong> <span aria-labelledby="status-label">{{ task.taskStatus }}</span></p>
                <p><strong id="category-label">Catégorie :</strong> <span aria-labelledby="category-label">{{ task.taskCategory }}</span></p>
                <p><strong id="start-date-label">Date de début :</strong> <span aria-labelledby="start-date-label">{{ task.taskDateFrom ? task.taskDateFrom.format('d-m-Y') : 'Non définie' }}</span></p>
                <p><strong id="end-date-label">Date de fin :</strong> <span aria-labelledby="end-date-label">{{ task.taskDateTo ? task.taskDateTo.format('d-m-Y') : 'Non définie' }}</span></p>
            </div>
            <a class="back-to-project" href="{{ path('app_management_project', { 'id': task.project.id }) }}" aria-label="Retour au projet {{ task.project.projectName }}">Retour au projet</a>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
