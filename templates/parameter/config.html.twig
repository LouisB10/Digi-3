                                                        title="Supprimer">
                                                    <img src="{{ asset('build/images/icons/delete.png') }}" alt="Supprimer">
                                                </button>
                                            </div>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr><td colspan="5" class="text-center">Aucun paramètre de ressource configuré</td></tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

