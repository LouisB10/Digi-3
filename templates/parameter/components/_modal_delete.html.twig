{# templates/parameter/components/_modal_delete.html.twig #}
{# Paramètres attendus : entity_name, entity_label #}

<div class="modal" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmModalTitle" aria-modal="false" aria-hidden="true" hidden>
    <div class="modal-content" role="document">
        <div class="modal-header">
            <h2 class="modal-title" id="deleteConfirmModalTitle">Confirmer la suppression</h2>
            <button type="button" class="close" aria-label="Fermer">&times;</button>
        </div>
        <div class="modal-body">
            <p id="deleteConfirmText">Êtes-vous sûr de vouloir supprimer {{ entity_label }} <span id="{{ entity_name }}ToDeleteName"></span> ?</p>
            <p>Cette action est irréversible.</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-cancel" aria-label="Annuler la suppression">Annuler</button>
            <button type="button" class="btn-danger" aria-label="Confirmer la suppression" aria-describedby="deleteConfirmText">Supprimer</button>
        </div>
    </div>
</div> 