{# templates/parameter/components/_modal_base.html.twig #}
{# Param√®tres attendus : modal_id, modal_title, submit_button_text, cancel_button_text #}

<div class="modal" id="{{ modal_id }}" tabindex="-1" role="dialog" aria-labelledby="{{ modal_id }}Title" aria-modal="false" hidden>
    <div class="modal-content" role="document">
        <div class="modal-header">
            <h2 class="modal-title" id="{{ modal_id }}Title">{{ modal_title }}</h2>
            <button type="button" class="close" aria-label="Fermer">&times;</button>
        </div>
        <div class="modal-body">
            {% block modal_content %}{% endblock %}
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-cancel">{{ cancel_button_text|default('Annuler') }}</button>
            <button type="button" class="btn-submit">{{ submit_button_text|default('Enregistrer') }}</button>
        </div>
    </div>
</div> 