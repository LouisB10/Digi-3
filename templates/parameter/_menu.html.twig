{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <nav class="parameter_menu" role="navigation" aria-label="Menu des paramètres">
        <ul class="flex-col">
            <li class="{% if app.request.attributes.get('_route') starts with 'app_parameter_generaux' %}parameter_menu_active{% endif %}">
                <a href="{{ path('app_parameter_generaux') }}" {% if app.request.attributes.get('_route') starts with 'app_parameter_generaux' %}aria-current="page"{% endif %}>
                    <i class="fas fa-cog" aria-hidden="true"></i> <span>GÉNÉRAUX</span>
                </a>
            </li>

            {% if permissionService.canViewUserList() %}
                <li class="{% if app.request.attributes.get('_route') starts with 'app_parameter_users' %}parameter_menu_active{% endif %}">
                    <a href="{{ path('app_parameter_users') }}" {% if app.request.attributes.get('_route') starts with 'app_parameter_users' %}aria-current="page"{% endif %}>
                        <i class="fas fa-users" aria-hidden="true"></i> <span>GESTION USER</span>
                    </a>
                </li>
            {% endif %}

            {% if permissionService.canViewCustomerList() %}
                <li class="{% if app.request.attributes.get('_route') starts with 'app_parameter_customers' %}parameter_menu_active{% endif %}">
                    <a href="{{ path('app_parameter_customers') }}" {% if app.request.attributes.get('_route') starts with 'app_parameter_customers' %}aria-current="page"{% endif %}>
                        <i class="fas fa-building" aria-hidden="true"></i> <span>GESTION CLIENTS</span>
                    </a>
                </li>
            {% endif %}

            {% if permissionService.canAccessConfiguration() %}
                <li class="{% if app.request.attributes.get('_route') starts with 'app_parameter_app_configuration' %}parameter_menu_active{% endif %}">
                    <a href="{{ path('app_parameter_app_configuration') }}" {% if app.request.attributes.get('_route') starts with 'app_parameter_app_configuration' %}aria-current="page"{% endif %}>
                        <i class="fas fa-tools" aria-hidden="true"></i> <span>CONFIGURATION</span>
                    </a>
                </li>
            {% endif %}

            <li class="{% if app.request.attributes.get('_route') starts with 'app_parameter_about' %}parameter_menu_active{% endif %}">
                <a href="{{ path('app_parameter_about') }}" {% if app.request.attributes.get('_route') starts with 'app_parameter_about' %}aria-current="page"{% endif %}>
                    <i class="fas fa-info-circle" aria-hidden="true"></i> <span>À PROPOS</span>
                </a>
            </li>
        </ul>
    </nav>
{% endif %}
