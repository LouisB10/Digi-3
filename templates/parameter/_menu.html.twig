{% if is_granted('IS_AUTHENTICATED_FULLY') %}
{% set permissions = getUserPermissions() %}
<div class="parameter_menu">
  <ul class="flex-col">
    <li class="{% if app.request.attributes.get('_route') == 'app_parameter_general_index' %}parameter_menu_active{% endif %}">
      <a href="{{ path('app_parameter_general_index') }}" {% if app.request.attributes.get('_route') == 'app_parameter_general_index' %}aria-current="page"{% endif %}>
        <i class="fas fa-cog" aria-hidden="true"></i> <span>GÉNÉRAUX</span>
      </a>
    </li>
    
    {% if permissions.canViewUsers %}
    <li class="{% if app.request.attributes.get('_route') == 'app_parameter_users_index' %}parameter_menu_active{% endif %}">
      <a href="{{ path('app_parameter_users_index') }}" {% if app.request.attributes.get('_route') == 'app_parameter_users_index' %}aria-current="page"{% endif %}>
        <i class="fas fa-users" aria-hidden="true"></i> <span>GESTION USER</span>
      </a>
    </li>
    {% endif %}
    
    {% if permissions.canViewCustomers %}
    <li class="{% if app.request.attributes.get('_route') == 'app_parameter_customers_index' %}parameter_menu_active{% endif %}">
      <a href="{{ path('app_parameter_customers_index') }}" {% if app.request.attributes.get('_route') == 'app_parameter_customers_index' %}aria-current="page"{% endif %}>
        <i class="fas fa-building" aria-hidden="true"></i> <span>GESTION CLIENTS</span>
      </a>
    </li>
    {% endif %}
    
    {% if permissions.canEditParameters %}
    <li class="{% if app.request.attributes.get('_route') == 'app_parameter_config_index' %}parameter_menu_active{% endif %}">
      <a href="{{ path('app_parameter_config_index') }}" {% if app.request.attributes.get('_route') == 'app_parameter_config_index' %}aria-current="page"{% endif %}>
        <i class="fas fa-tools" aria-hidden="true"></i> <span>CONFIGURATION</span>
      </a>
    </li>
    {% endif %}
    
    <li class="{% if app.request.attributes.get('_route') == 'app_parameter_about_index' %}parameter_menu_active{% endif %}">
      <a href="{{ path('app_parameter_about_index') }}" {% if app.request.attributes.get('_route') == 'app_parameter_about_index' %}aria-current="page"{% endif %}>
        <i class="fas fa-info-circle" aria-hidden="true"></i> <span>À PROPOS</span>
      </a>
    </li>
  </ul>
</div>
{% endif %}
