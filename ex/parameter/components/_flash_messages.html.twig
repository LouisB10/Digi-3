{# Messages flash #}
{% for type, messages in app.flashes %}
    <div 
        class="alert alert-{{ type }}" 
        role="alert" 
        aria-live="polite"
        {% if type == 'error' or type == 'danger' %}aria-atomic="true"{% endif %}
    >
        {% for message in messages %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>
{% endfor %}