{# Formulaire client #}
<form id="customerForm" aria-labelledby="customerFormTitle">
    <h3 id="customerFormTitle" class="sr-only">Formulaire de gestion de client</h3>
    <input type="hidden" name="modalAction" id="modalAction" value="add">
    <input type="hidden" name="customerId" id="customerId">
    
    <div class="mb-3">
        <label for="customerName" class="form-label">Nom</label>
        <input 
            type="text" 
            class="form-control" 
            id="customerName" 
            name="customerName" 
            required 
            aria-required="true"
            aria-describedby="customerNameHelp"
        >
        <div id="customerNameHelp" class="form-text sr-only">Entrez le nom du client</div>
    </div>
    <div class="mb-3">
        <label for="customerAddressStreet" class="form-label">Adresse</label>
        <input 
            type="text" 
            class="form-control" 
            id="customerAddressStreet" 
            name="customerAddressStreet" 
            required 
            aria-required="true"
        >
    </div>
    <div class="mb-3">
        <label for="customerAddressZipcode" class="form-label">Code Postal</label>
        <input 
            type="text" 
            class="form-control" 
            id="customerAddressZipcode" 
            name="customerAddressZipcode" 
            required 
            aria-required="true"
            pattern="[0-9]{5}"
            aria-describedby="zipcodeHelp"
        >
        <div id="zipcodeHelp" class="form-text sr-only">Entrez le code postal à 5 chiffres</div>
    </div>
    <div class="mb-3">
        <label for="customerAddressCity" class="form-label">Ville</label>
        <input 
            type="text" 
            class="form-control" 
            id="customerAddressCity" 
            name="customerAddressCity" 
            required 
            aria-required="true"
        >
    </div>
    <div class="mb-3">
        <label for="customerAddressCountry" class="form-label">Pays</label>
        <input 
            type="text" 
            class="form-control" 
            id="customerAddressCountry" 
            name="customerAddressCountry" 
            required 
            aria-required="true"
        >
    </div>
    <div class="mb-3">
        <label for="customerVAT" class="form-label">TVA</label>
        <input 
            type="text" 
            class="form-control" 
            id="customerVAT" 
            name="customerVAT"
            aria-describedby="vatHelp"
        >
        <div id="vatHelp" class="form-text sr-only">Format européen (ex: FR12345678900)</div>
    </div>
    <div class="mb-3">
        <label for="customerSIREN" class="form-label">SIREN</label>
        <input 
            type="text" 
            class="form-control" 
            id="customerSIREN" 
            name="customerSIREN"
            pattern="[0-9]{9}"
            aria-describedby="sirenHelp"
        >
        <div id="sirenHelp" class="form-text sr-only">Numéro SIREN à 9 chiffres</div>
    </div>
</form> 